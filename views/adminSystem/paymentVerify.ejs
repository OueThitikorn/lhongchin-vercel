<!DOCTYPE html>
<html lang="en">
<%- include('../partials/baseHead', { customTitle: 'Payment Verification' }) %>

  <body>
    <%- include('../partials/navAdmin') %>

      <div class="mx-5">
        <h1 class="mb-5">การตรวจสอบการชำระเงิน</h1>

        <div class="table-responsive d-flex justify-content-center">
          <table class="table table-bordered table-hover align-middle text-center">
            <thead class="table-light">
              <tr>
                <th>#ID</th>
                <th>ชื่อผู้จอง</th>
                <th>เบอร์โทรศัพท์</th>
                <th>ชื่อโปรแกรมทัวร์</th>
                <th>วันที่จอง</th>
                <th>รอบการเดินทาง</th>
                <th>จำนวน (คน)</th>
                <th>ราคา (บาท)</th>
                <th>สถานะ</th>
                <th>จัดการ</th>
              </tr>
            </thead>

            <tbody>
              <% booking.forEach(booking=> { %>
                <tr>
                  <td>
                    <%= booking.booking_id %>
                  </td>
                  <td>
                    <%= booking.user_name %>
                  </td>
                  <td>
                    <%= booking.phone %>
                  </td>
                  <td>
                    <%= booking.tour_name %>
                  </td>
                  <td>
                    <%= new Date(booking.booking_date).toLocaleDateString('th-TH') %>
                  </td>
                  <td>
                    <% if (booking.start_date && booking.end_date) { %>
                      <%= new Date(booking.start_date).toLocaleDateString('th-TH') %> -
                        <%= new Date(booking.end_date).toLocaleDateString('th-TH') %>
                          <% } else { %>
                            -
                            <% } %>
                  </td>
                  <td>
                    <%= booking.total_people %> คน
                  </td>
                  <td>
                    <%= booking.total_price.toLocaleString() %>
                  </td>
                  <td style="color: orange;">รอยืนยันการชำระเงิน <br>

                    <% if (booking.slip_path) { %>
                      <button type="button" class="btn btn-warning text-white mb-2" data-bs-toggle="modal"
                        data-bs-target="#slipModal_<%= booking.booking_id %>">
                        ใบเสร็จ
                      </button>

                      <!-- Modal แสดงรูป slip -->
                      <div class="modal fade" id="slipModal_<%= booking.booking_id %>" tabindex="-1"
                        aria-labelledby="slipModalLabel_<%= booking.booking_id %>" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-lg">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="slipModalLabel_<%= booking.booking_id %>">
                                ใบเสร็จการชำระเงิน #ID<%= booking.booking_id %>
                              </h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                            </div>
                            <div class="modal-body text-center">
                              <img src="/uploads/<%= booking.slip_path %>" alt="Slip Payment" class="img-fluid"
                                onerror="this.src='/images/no-slip.png';">
                            </div>
                          </div>
                        </div>
                      </div>
                      <% } else { %>
                        <button class="btn btn-warning mb-2" disabled>ยังไม่มีใบเสร็จ</button>
                        <% } %>
                  </td>
                  <td>

                    <!-- ปุ่มยืนยันการชำระเงิน -->
                    <button type="button" class="btn btn-success" data-bs-toggle="modal"
                      data-bs-target="#paymentModal_<%= booking.booking_id %>">
                      <ion-icon name="checkmark-sharp"></ion-icon> ยืนยัน
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="paymentModal_<%= booking.booking_id %>" tabindex="-1"
                      aria-labelledby="paymentModalLabel_<%= booking.booking_id %>" aria-hidden="true">
                      <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="paymentModalLabel_<%= booking.booking_id %>">ยืนยันการชำระเงิน
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body text-start">
                            ชื่อผู้จอง: <strong>
                              <%= booking.user_name %>
                            </strong><br>
                            ทัวร์: <strong>
                              <%= booking.tour_name %>
                            </strong><br>
                            รอบการเดินทาง: <strong>
                              <%= new Date(booking.start_date).toLocaleDateString('th-TH') %> - <%= new
                                  Date(booking.end_date).toLocaleDateString('th-TH') %>
                            </strong><br>
                            จำนวน: <strong>
                              <%= booking.total_people %>
                            </strong> คน <br>
                            ราคา: <strong>
                              <%= booking.total_price.toLocaleString() %> บาท
                            </strong>
                          </div>
                          <div class="modal-footer">
                            <!-- ยืนยันชำระเงิน -->
                            <form action="/admin/paymentVerify/update/<%= booking.booking_id %>" method="POST">
                              <input type="hidden" name="status" value="ชำระเงินแล้ว">
                              <button type="submit" class="btn btn-success">ยืนยัน</button>
                            </form>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                          </div>
                        </div>
                      </div>
                    </div>

                    <!-- ปุ่ม ชำระเงินไม่สำเร็จ -->
                    <form action="/admin/paymentVerify/update/<%= booking.booking_id %>" method="POST" class="d-inline-block">
                      <input type="hidden" name="status" value="ชำระเงินไม่สำเร็จ">
                      <button type="submit" class="btn btn-danger">
                        <ion-icon name="close-sharp"></ion-icon> ไม่สำเร็จ
                      </button>
                    </form>

                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
      </div>

  </body>
  <%- include('../partials/allScript') %>

</html>